{
  "name": "smart-reader",
  "version": "1.0.0",
  "description": "A smart desktop application to read and render Markdown files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:portable": "electron-builder --win dir",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "markdown",
    "reader",
    "desktop",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^9.1.6",
    "pdfjs-dist": "^4.10.38"
  },
  "build": {
    "appId": "com.smartreader.app",
    "productName": "Smart Reader",
    "icon": "assets/icon_256.png",
    "executableName": "Smart Reader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "docs/**/*",
      "!**/node_modules/**/*",
      "!**/.git/**/*",
      "!**/dist/**/*",
      "!**/*.md",
      "!**/run.bat",
      "assets/icon_256.png"
    ],
    "extraResources": [
      {
        "from": "docs",
        "to": "docs",
        "filter": [
          "**/*"
        ]
      }
    ],
    "compression": "normal",
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "publish": null,
    "forceCodeSigning": false,
    "afterSign": null,
    "beforeBuild": null,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "asar": true,
    "asarUnpack": [],
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "sign": false,
      "verifyUpdateCodeSignature": false,
      "icon": "assets/icon_256.png",
      "executableName": "Smart Reader",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "signDlls": false,
      "compression": "store"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "assets/icon_256.png",
      "executableName": "Smart Reader"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "assets/icon_256.png",
      "executableName": "Smart Reader"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Markdown Reader"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}",
      "unpackDirName": "unpacked"
    }
  }
}
